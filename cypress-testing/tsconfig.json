{
  "compilerOptions": {
    /* Basic Options */
    "target": "es5",
    "module": "commonjs",
    "downlevelIteration": true,
    "strict": true,
    "skipLibCheck": true,
    "typeRoots": ["./support"],
    "types": [
        // load Cypress global type
        "cypress",
        "node",
        "cypress-axe",
        "axe-core",
        "@types/testing-library__cypress"
    ],
    "esModuleInterop": true,
    "baseUrl": ".",
    "sourceMap": false,
    "lib": ["es6", "dom", "es2017"],
    "paths": {
        "@Interfaces/*": ["cypress/interfaces/*"],
        "@Common/*": ["cypress/features/common/*"],
        "@Pages/*": ["cypress/pages/*"],
        "@Support/*": ["cypress/support/*"], 
    },
  },
  "include": [
    "cypress/**/*.ts",
    "cypress/**/*.js",
    "cypress/support/index.d.ts"
  ],
  "exclude": [
    "node_modules",
  ],
  "typedocOptions": {
    "entryPoints": ["cypress"],
    "out": "docs",
    "exclude": "/node_modules/**",
    "readme": "README.md",
  }
}